resource "aws_security_group" "vpc_endpoint_sg" {
  name        = "ecs-endpoint-sg"
  description = "ecs-endpoint-sg"
  vpc_id      = aws_vpc.vpc.id

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }
  tags = {
    Name = "vpc-endpoint-sg"
  }
}